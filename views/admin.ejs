<section class='admin'>
	<h4>Admin</h4>
	<a href="/addProd" class='addProd'><i class="fa fa-cogs"></i>Add product</a>
<table>
	<thead>
			<th>Title</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th></th>
	</thead>
	<tbody>
		<% for(let i = 0; i < products.length; i++) { %>
			<tr>
				<td>
					<a class="back" href="/editProd/<%=products[i]._id%>"><%=products[i].title%></a>
				</td>
				<td><%=products[i].desc%> <%=products[i].desc%></td>
				<td><%=products[i].quantity%></td>
				<td><%=products[i].price%><span> $</td>

				<td>
                    <a class="edit" href="/editProd/<%=products[i]._id%>"><i class="fa fa-pencil"></i></a>
                    <a class="remove" href="/deleteProd/<%=products[i]._id%>"><i class="fa fa-remove"></i></a>
                </td>
			</tr>
		<% } %>
	</tbody>
</table>

</section>
